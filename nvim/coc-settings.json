{
    "python.formatting.provider": "black",
    "python.jediEnabled": true,
    "python.linting.mypyEnabled": true,
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": [
                "go.mod",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": [
                "go"
            ]
        }
    }
}
